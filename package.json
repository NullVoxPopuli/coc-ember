{
  "name": "coc-ember",
  "version": "1.5.35",
  "private": false,
  "author": "NullVoxPopuli",
  "license": "MIT",
  "description": "Ember language server extension for coc.nvim",
  "main": "lib/index.js",
  "keywords": [
    "nvim",
    "coc.nvim",
    "ember",
    "ember-cli",
    "ember-language-server"
  ],
  "scripts": {
    "update-language-server": "yarn upgrade @emberwatch/ember-language-server",
    "clean": "rimraf lib tmp",
    "build:js": "babel src --out-dir lib --extensions \".ts\" --source-maps inline",
    "build:addons": "./scripts/build-addons.sh",
    "lint:js": "eslint . --ext .ts",
    "prepublishOnly": "./scripts/prepublish.sh"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "files": [
    "package.json",
    "lib",
    "tsconfig.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "coc": "^0.0.77"
  },
  "activationEvents": [
    "onLanguage:hbs",
    "onLanguage:html.handlebars",
    "onLanguage:handlebars",
    "onLanguage:typescript",
    "onLanguage:typescript.glimmer",
    "onLanguage:javascript",
    "onLanguage:javascript.glimmer",
    "workspaceContains:ember-cli-build.js"
  ],
  "contributes": {
    "configuration": {
      "title": "Ember",
      "properties": {
        "els.codeLens.relatedFiles": {
          "type": "boolean",
          "default": true,
          "description": "Show related files as Lens on first line."
        },
        "els.local.addons": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "List of UELS addon paths to include."
        }
      }
    },
    "commands": [
      {
        "command": "els.reloadProject",
        "title": "Restart Ember Language Server",
        "category": "Ember"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "els.fileUsages",
          "name": "Ember File Usages"
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.17.3",
    "@babel/plugin-transform-modules-commonjs": "^7.17.9",
    "@babel/preset-typescript": "^7.16.7",
    "@nullvoxpopuli/eslint-configs": "^2.2.14",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^16.11.31",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "coc.nvim": "^0.0.80",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-decorator-position": "^4.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "typescript": "^4.6.3",
    "vscode-languageserver-protocol": "^3.16.0"
  },
  "dependencies": {
    "@lifeart/ember-language-server": "2.25.0"
  },
  "volta": {
    "node": "16.15.0",
    "yarn": "1.22.18"
  }
}
