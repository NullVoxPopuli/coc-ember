{
  "name": "coc-ember",
  "version": "1.1.0",
  "private": false,
  "author": "NullVoxPopuli",
  "license": "MIT",
  "description": "Ember language server extension for coc.nvim",
  "main": "lib/index.js",
  "keywords": [
    "nvim",
    "coc.nvim",
    "ember",
    "ember-cli",
    "ember-language-server"
  ],
  "scripts": {
    "update-language-server": "yarn upgrade @emberwatch/ember-language-server",
    "clean": "rimraf lib tmp",
    "build:js": "babel src --out-dir lib --extensions \".ts\" --source-maps inline",
    "build:language-server": "./scripts/build-uels.sh",
    "build:addons": "./scripts/build-addons.sh",
    "lint:js": "eslint . --ext .ts",
    "prepublishOnly": "./scripts/prepublish.sh"
  },
  "files": [
    "package.json",
    "lib",
    "tsconfig.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "coc": "^0.0.77"
  },
  "activationEvents": [
    "onLanguage:hbs",
    "onLanguage:html.handlebars",
    "onLanguage:handlebars",
    "onLanguage:typescript",
    "onLanguage:javascript",
    "workspaceContains:ember-cli-build.js"
  ],
  "contributes": {
    "configuration": {
      "title": "Ember",
      "properties": {
        "els.codeLens.relatedFiles": {
          "type": "boolean",
          "default": true,
          "description": "Show related files as Lens on first line."
        },
        "els.local.addons": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "List of UELS addon paths to include."
        }
      }
    },
    "commands": [
      {
        "command": "els.reloadProject",
        "title": "Restart Ember Language Server",
        "category": "Ember"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "els.fileUsages",
          "name": "Ember File Usages"
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/node": "^13.13.5",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "coc.nvim": "^0.0.77",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.0.7",
    "typescript": "^3.9.2",
    "vscode-languageserver-protocol": "^3.15.3"
  },
  "dependencies": {
    "@emberwatch/ember-language-server": "github:lifeart/ember-language-server#component-context-info-origin"
  },
  "volta": {
    "node": "10.18.0",
    "yarn": "1.22.4"
  }
}
